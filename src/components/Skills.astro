---

<section id="skills" class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
          Skills & Technologies
        </span>
      </h2>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">
        The tools and technologies I use to bring ideas to life
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Languages -->
      <div class="bg-slate-800 rounded-xl p-6 hover:bg-slate-700 transition-colors border border-slate-700">
        <!-- Terminal-like header -->
        <div class="flex items-center justify-between mb-4 pb-3 border-b border-slate-600">
          <div class="flex items-center space-x-2">
            <div class="flex space-x-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
            <span class="text-slate-400 text-sm ml-2">~/languages</span>
          </div>
        </div>
        
        <div class="space-y-4">
          <div class="space-y-2">
            <div class="flex justify-between items-center">
              <div class="flex items-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-blue-400">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M15 17.5c.32 .32 .754 .5 1.207 .5h.543c.69 0 1.25 -.56 1.25 -1.25v-.25a1.5 1.5 0 0 0 -1.5 -1.5a1.5 1.5 0 0 1 -1.5 -1.5v-.25c0 -.69 .56 -1.25 1.25 -1.25h.543c.453 0 .887 .18 1.207 .5" />
                  <path d="M9 12h4" />
                  <path d="M11 12v6" />
                  <path d="M21 19v-14a2 2 0 0 0 -2 -2h-14a2 2 0 0 0 -2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2 -2z" />
                </svg>
                <span class="text-slate-300">TypeScript</span>
              </div>
              <span class="text-blue-400 text-sm">Advanced</span>
            </div>
            <div class="w-full bg-slate-700 rounded-full h-2">
              <div class="bg-gradient-to-r from-blue-500 to-blue-400 h-2 rounded-full" style="width: 90%"></div>
            </div>
          </div>
          
          <div class="space-y-2">
            <div class="flex justify-between items-center">
              <div class="flex items-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-yellow-400">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M20 4l-2 14.5l-6 2l-6 -2l-2 -14.5z" />
                  <path d="M7.5 8h3v8l-2 -1" />
                  <path d="M16.5 8h-2.5a.5 .5 0 0 0 -.5 .5v3a.5 .5 0 0 0 .5 .5h1.423a.5 .5 0 0 1 .495 .57l-.418 2.93l-2 .5" />
                </svg>
                <span class="text-slate-300">JavaScript</span>
              </div>
              <span class="text-yellow-400 text-sm">Expert</span>
            </div>
            <div class="w-full bg-slate-700 rounded-full h-2">
              <div class="bg-gradient-to-r from-yellow-500 to-yellow-400 h-2 rounded-full" style="width: 95%"></div>
            </div>
          </div>
          
          <div class="space-y-2">
            <div class="flex justify-between items-center">
              <div class="flex items-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-orange-400">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M10.139 3.463c.473 -1.95 3.249 -1.95 3.722 0a1.916 1.916 0 0 0 2.859 1.185c1.714 -1.045 3.678 .918 2.633 2.633a1.916 1.916 0 0 0 1.184 2.858c1.95 .473 1.95 3.249 0 3.722a1.916 1.916 0 0 0 -1.185 2.859c1.045 1.714 -.918 3.678 -2.633 2.633a1.916 1.916 0 0 0 -2.858 1.184c-.473 1.95 -3.249 1.95 -3.722 0a1.916 1.916 0 0 0 -2.859 -1.185c-1.714 1.045 -3.678 -.918 -2.633 -2.633a1.916 1.916 0 0 0 -1.184 -2.858c-1.95 -.473 -1.95 -3.249 0 -3.722a1.916 1.916 0 0 0 1.185 -2.859c-1.045 -1.714 .918 -3.678 2.633 -2.633a1.914 1.914 0 0 0 2.858 -1.184z" />
                  <path d="M8 12h6a2 2 0 1 0 0 -4h-6v8v-4z" />
                  <path d="M19 16h-2a2 2 0 0 1 -2 -2a2 2 0 0 0 -2 -2h-1" />
                  <path d="M9 8h-4" />
                  <path d="M5 16h4" />
                </svg>
                <span class="text-slate-300">Rust</span>
              </div>
              <span class="text-orange-400 text-sm">Intermediate</span>
            </div>
            <div class="w-full bg-slate-700 rounded-full h-2">
              <div class="bg-gradient-to-r from-orange-500 to-red-500 h-2 rounded-full" style="width: 75%"></div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Frontend Frameworks -->
      <div class="bg-slate-800 rounded-xl p-6 hover:bg-slate-700 transition-colors border border-slate-700">
        <!-- Terminal-like header -->
        <div class="flex items-center justify-between mb-4 pb-3 border-b border-slate-600">
          <div class="flex items-center space-x-2">
            <div class="flex space-x-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
            <span class="text-slate-400 text-sm ml-2">~/frontend</span>
          </div>
        </div>
        
        <div class="flex flex-wrap gap-3">
          <span class="bg-blue-500/20 text-blue-300 px-3 py-2 rounded-full text-sm border border-blue-500/30 hover:bg-blue-500/30 transition-colors">React</span>
          <span class="bg-green-500/20 text-green-300 px-3 py-2 rounded-full text-sm border border-green-500/30 hover:bg-green-500/30 transition-colors">Vue.js</span>
          <span class="bg-orange-500/20 text-orange-300 px-3 py-2 rounded-full text-sm border border-orange-500/30 hover:bg-orange-500/30 transition-colors">Astro</span>
          <span class="bg-black/20 text-gray-300 px-3 py-2 rounded-full text-sm border border-gray-500/30 hover:bg-black/30 transition-colors">Next.js</span>
          <span class="bg-purple-500/20 text-purple-300 px-3 py-2 rounded-full text-sm border border-purple-500/30 hover:bg-purple-500/30 transition-colors">Vite</span>
          <span class="bg-pink-500/20 text-pink-300 px-3 py-2 rounded-full text-sm border border-pink-500/30 hover:bg-pink-500/30 transition-colors">Tailwind CSS</span>
          <span class="bg-green-600/20 text-green-300 px-3 py-2 rounded-full text-sm border border-green-600/30 hover:bg-green-600/30 transition-colors">VitePress</span>
          <span class="bg-indigo-500/20 text-indigo-300 px-3 py-2 rounded-full text-sm border border-indigo-500/30 hover:bg-indigo-500/30 transition-colors">SCSS</span>
        </div>
      </div>
      
      <!-- Backend & Tools -->
      <div class="bg-slate-800 rounded-xl p-6 hover:bg-slate-700 transition-colors border border-slate-700">
        <!-- Terminal-like header -->
        <div class="flex items-center justify-between mb-4 pb-3 border-b border-slate-600">
          <div class="flex items-center space-x-2">
            <div class="flex space-x-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
            <span class="text-slate-400 text-sm ml-2">~/tools</span>
          </div>
        </div>
        
        <div class="flex flex-wrap gap-3">
          <span class="bg-green-500/20 text-green-300 px-3 py-2 rounded-full text-sm border border-green-500/30 hover:bg-green-500/30 transition-colors">Node.js</span>
          <span class="bg-gray-500/20 text-gray-300 px-3 py-2 rounded-full text-sm border border-gray-500/30 hover:bg-gray-500/30 transition-colors">Express</span>
          <span class="bg-blue-600/20 text-blue-300 px-3 py-2 rounded-full text-sm border border-blue-600/30 hover:bg-blue-600/30 transition-colors">PostgreSQL</span>
          <span class="bg-green-600/20 text-green-300 px-3 py-2 rounded-full text-sm border border-green-600/30 hover:bg-green-600/30 transition-colors">MongoDB</span>
          <span class="bg-slate-500/20 text-slate-300 px-3 py-2 rounded-full text-sm border border-slate-500/30 hover:bg-slate-500/30 transition-colors">Prisma</span>
          <span class="bg-orange-600/20 text-orange-300 px-3 py-2 rounded-full text-sm border border-orange-600/30 hover:bg-orange-600/30 transition-colors">Git</span>
          <span class="bg-blue-500/20 text-blue-300 px-3 py-2 rounded-full text-sm border border-blue-500/30 hover:bg-blue-500/30 transition-colors">Docker</span>
          <span class="bg-purple-600/20 text-purple-300 px-3 py-2 rounded-full text-sm border border-purple-600/30 hover:bg-purple-600/30 transition-colors">VS Code</span>
          <span class="bg-cyan-500/20 text-cyan-300 px-3 py-2 rounded-full text-sm border border-cyan-500/30 hover:bg-cyan-500/30 transition-colors">Figma</span>
        </div>
      </div>
    </div>
  </div>
</section>
